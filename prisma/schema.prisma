generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  password  String
  // sessions  Chat[]
}

model Chat {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  pdfId       String
  messages    Json[]
  createdAt   DateTime @default(now())
}

model PDF {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  fileName  String
  metaData  Json
}
